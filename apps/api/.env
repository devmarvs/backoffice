DB_HOST=postgres
DB_PORT=5432
DB_NAME=backoffice_autopilot
DB_USER=root
DB_PASSWORD=root
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?serverVersion=18&charset=utf8"
